<!--pages/home/home.wxml-->
<view class="top">
  <picker mode="region" bindchange="bindRegionChange" value="{{region}}">
    <view class="picker">
      省市过滤：{{region[0]}}，{{region[1]}}
    </view>
  </picker>
</view>
<block wx:if="{{showLoading}}">
    <view class="page-loading">
        <text>正在玩命加载中。。。</text>
    </view>
</block>
<block wx:else>
    <scroll-view class="sv" scroll-top="0" scroll-y bindscrolltolower="scrolltolower">
        <block wx:for="{{list}}">
            <view data-id="{{item.id}}"  class="mod-list">
                <view class="left" bindtap="viewImg" data-idx="{{item.MainImage}}">
                    <image src="{{item.MainImage}}"></image>
                </view>
                <view class="right">
                    <view class="row">
                        {{item.Title}}
                    </view>
                    <view class="row">
                        价格:{{item.Price}}
                    </view>
                    <view class="row">
                        购买日期:{{item.PurchaseDate}}
                    </view>
                    <view class="row1">
                        地区:{{item.Remark}}
                    </view>
                    <view class="row">
                        简介:{{item.ContentValidity}}
                    </view>
                </view>
                <view class="btn-area">
                <view wx:if="{{item.State == 1 }}">  
                <button data-idx="{{item.id}}" type="warn" size="mini"
        bindtap="redirect"> 交换 </button></view>
        <button data-idx="{{item.UserId}}" type="default" size="mini"
        bindtap="chat"> 聊天 </button>
                </view>
            </view>
        </block>
        <block wx:if="{{showMore}}">
            <view class="page-loading">
                <text>正在玩命加载中。。。</text>
            </view>
        </block>
        <block wx:else>
            <view class="page-loading">
                <text>没有更多内容了。。。</text>
            </view>
        </block>
    </scroll-view>
</block>