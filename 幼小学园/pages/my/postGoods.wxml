<!--pages/home/home.wxml-->
<block wx:if="{{showLoading}}">
    <view class="page-loading">
        <text>正在玩命加载中。。。</text>
    </view>
</block>
<block wx:else>
    <scroll-view class="sv" scroll-top="0" scroll-y bindscrolltolower="scrolltolower">
        <block wx:for="{{list}}">
            <view data-id="{{item.objorders.id}}"  class="mod-list">
              <view class="left">
                  <image src="{{item.objGoodsA.MainImage}}"></image>
              </view>
              <view class="right">
                  <view class="row">
                      {{item.objGoodsA.Title}}
                  </view>
                  <view class="row">
                      价格:{{item.objGoodsA.Price}}
                  </view>
                  <view class="row">
                      简介:{{item.objGoodsA.ContentValidity}}
                  </view>
              </view>
              <view class="left">
                  <image src="{{item.objGoodsB.MainImage}}"></image>
              </view>
              <view class="right">
                  <view class="row">
                      {{item.objGoodsB.Title}}
                  </view>
                  <view class="row">
                      价格:{{item.objGoodsB.Price}}
                  </view>
                  <view class="row">
                      简介:{{item.objGoodsB.ContentValidity}}
                  </view>
              </view>     
            </view>
            <view class="btn-area">
                        <button type="default" data-idx="{{item.objorders.id}}" size="mini"  bindtap="endExchange">交换结束</button>
                        <button type="default" data-idx="{{item.objGoodsB.UserId}}" size="mini"  bindtap="chat">聊天<view wx:if="{{item.bool}}" class="badge">
                        {{item.unreadNum}}
                        </view></button>
                        
                   </view>  
                <!--<view class="left">
                    <image src="{{item.MainImage}}"></image>
                </view>
                <view class="right">
                    <view class="row">
                        {{item.Title}}
                    </view>
                    <view class="row">
                        价格:{{item.Price}}
                    </view>
                    <view class="row">
                        购买日期:{{item.PurchaseDate}}
                    </view>
                    <view class="row">
                        简介:{{item.ContentValidity}}
                    </view>-->
                     <!--<view class="btn-area">
                        <button type="default" data-idx="{{item.id}}" size="mini"  bindtap="endExchange">交换结束</button>
                        <button type="default" data-idx="{{item.UserId}}" size="mini"  bindtap="chat">聊天</button>
                        <view wx:if="{{item.bool}}" class="badge">{{item.unreadNum}}</view>
                   </view>
                </view>-->
            
        </block>
        <block wx:if="{{showMore}}">
            <view class="page-loading">
                <text>正在玩命加载中。。。</text>
            </view>
        </block>
        <block wx:else>
            <view class="page-loading">
                <text>没有更多内容了。。。</text>
            </view>
        </block>
    </scroll-view>
</block>
